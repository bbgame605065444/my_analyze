# CoT 实验配置文件
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 模型选择配置
# =============================================================================

# 模型类型: gemini, qwen3_local, qwen3_api
MODEL_TYPE=gemini

# 模型名称
MODEL_NAME=gemini-2.0-flash-exp

# API密钥 (根据模型类型设置相应的密钥)
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_api_key_here

# API基础URL (用于Qwen3 API或其他兼容OpenAI API的服务)
API_BASE=https://api.openai.com/v1

# =============================================================================
# Qwen3 本地推理配置
# =============================================================================

# Qwen3模型路径 (HuggingFace模型名称或本地路径)
QWEN_MODEL_PATH=Qwen/Qwen3-8B

# 是否启用FP8量化 (true/false)
USE_FP8=false

# 设备映射 (auto, cpu, cuda:0, etc.)
DEVICE_MAP=auto

# 数据类型 (auto, float16, float32)
TORCH_DTYPE=auto

# =============================================================================
# 生成参数配置 (非思考模式)
# =============================================================================

# 温度参数 (0.0-1.0, 推荐非思考模式: 0.7)
TEMPERATURE=0.7

# Top-p参数 (0.0-1.0, 推荐非思考模式: 0.8)
TOP_P=0.8

# 最大生成token数
MAX_TOKENS=2048

# =============================================================================
# 实验配置
# =============================================================================

# 最大重试次数
MAX_RETRIES=3

# 基础延迟时间(秒)
BASE_DELAY=1

# 是否启用详细日志
VERBOSE_LOGGING=true